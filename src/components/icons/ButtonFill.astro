---
export interface Props {
  url: string
  label: string
  disable: string
  type: string
}
const { url, label, disable, type } = Astro.props
---

<a
  class={`${
    disable || 'pointer-events-none opacity-10'
  } px-6 py-1.5 font-medium text-black bg-white border-2 border-white rounded-full flex items-center justify-center gap-2 xl:px-7 xl:py-2 xl:gap-3`}
  href={url}
  target='_blank'
>
  {label}
  {
    type === 'download' ? (
      <svg
        xmlns='http://www.w3.org/2000/svg'
        fill='none'
        viewBox='0 0 24 24'
        stroke-width='2'
        stroke='currentColor'
        class='w-4 h-4 xl:w-5 xl:h-5'
      >
        <path
          stroke-linecap='round'
          stroke-linejoin='round'
          d='M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3'
        />
      </svg>
    ) : (
      <svg
        xmlns='http://www.w3.org/2000/svg'
        fill='none'
        viewBox='0 0 24 24'
        stroke-width='2'
        stroke='currentColor'
        class='w-4 h-4 xl:w-5 xl:h-5'
      >
        <path
          stroke-linecap='round'
          stroke-linejoin='round'
          d='M8.25 4.5l7.5 7.5-7.5 7.5'
        />
      </svg>
    )
  }
</a>
